<div class="container"> <%= form_for Comment.create, :remote => true do |f| %>
      <%= f.label :name, "Your name" %><br />
      <%= f.text_field :name %><br />
      <%= f.label :body, "Comment" %><br />
      <%= f.text_area :body, :rows => 8 %><br />
      <%= f.submit "Add comment" %>
<% end %>
</div>

