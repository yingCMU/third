<span id="comments_count"><%= pluralize(@comments.count, "Comment") %></span>
<div id="comments">
  <%= render :partial => @comments, :locals => { :list => true } %>
</div>



<div id="comment-notice"></div>

<h2>Say something!</h2>
<a href='#' onclick='alert("Inline Javscript")'>Link</a>



<%= form_for Comment.new,:action => 'create', :class => "create", :remote => true do |f| %>
    <%= f.label :name, "Your name" %><br />
    <%= f.text_field :name %><br />
    <%= f.label :body, "Comment" %><br />
    <%= f.text_area :body, :rows => 8 %><br />
    <%= f.submit "Add comment" ,:action => "create" %>
<% end %>